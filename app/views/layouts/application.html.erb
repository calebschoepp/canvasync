<!--Utilized for presentation/design of UI-->

<!DOCTYPE html>
<html>
  <head>
    <title>Canvasync</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <% if content_for? :for_head %>
      <%= yield :for_head %>
    <% end %>
  </head>

  <body class="bg-neutral-100 w-full h-full">
    <%= render "layouts/header" %>

    <main class="container mx-auto my-8 px-5 flex flex-col h-full">
    <% if notice %>
      <p id="notice" class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p id="alert" class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
    </main>
  </body>
</html>
