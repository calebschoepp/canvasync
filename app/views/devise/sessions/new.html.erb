<div class="flex justify-center items-center">
  <div class="card w-full max-w-xl">
    <h1 class="heading-1">Log in</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { "data-turbo" => false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="flex flex-col space-y-4">
        <div class="field">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'text-field', size: 6 %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex flex-row items-center space-x-2">
            <%= f.check_box :remember_me, class: 'checkbox' %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <%= f.submit "Log in", class: 'primary-button' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
