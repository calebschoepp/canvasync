<!--TODO: Render as a square card-->
<div id="<%= dom_id notebook %>" class="card">
  <div class='flex flex-row items-center justify-between'>
    <%= link_to notebook.name, notebook, class: 'heading-3 overflow-hidden' %>
    <div data-controller="dropdown" class="relative">
      <div class="flex">
        <button class='' type="button" data-action="dropdown#toggle click@window->dropdown#hide">
          <%= image_tag('3-dots.png', class: 'w-5 h-5 my-auto') %>
        </button>
      </div>

      <div
        data-dropdown-target="menu"
        class="hidden transition transform origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
        data-transition-enter-from="opacity-0 scale-95"
        data-transition-enter-to="opacity-100 scale-100"
        data-transition-leave-from="opacity-100 scale-100"
        data-transition-leave-to="opacity-0 scale-95"
      >
        <div class="py-1">
          <%= link_to "Open", notebook, data: { action: "dropdown#toggle" }, class: 'hover:bg-gray-100 block px-4 py-2' %>
          <% if notebook.owner?(current_user) %>
            <%= link_to "Edit", edit_notebook_path(notebook), data: { action: "dropdown#toggle" }, class: 'hover:bg-gray-100 block px-4 py-2' %>
          <% end %>
          <!--          TODO: Correctly link this one-->
          <%= link_to "Export to PDF", notebook, data: { action: "dropdown#toggle" }, class: 'hover:bg-gray-100 block px-4 py-2' %>

        </div>
      </div>
    </div>
  </div>
</div>
