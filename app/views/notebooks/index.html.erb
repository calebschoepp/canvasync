<div data-controller="search" class="w-full flex flex-row items-center justify-center">
  <div class="w-1/4"></div>
  <div class="flex flex-col items-center justify-start w-1/2">
    <input
      data-search-target="query"
      autofocus="autofocus"
      autocomplete="off"
      class="text-field inline-block"
      type="text"
      value=""
      placeholder="Search for a notebook"
      data-action="input->search#update">
    <div id="results" class="transition transform mt-2 w-full rounded-md shadow-lg bg-white focus:outline-none"></div>
  </div>
  <div class="w-1/4"></div>
</div>

<div class='flex flex-row items-center justify-between'>
  <h1 class="heading-1">Your Notebooks</h1>
  <%= link_to "Create a Notebook", new_notebook_path, class: "primary-button" %>
</div>

<% if @owned_notebooks.empty? %>
  <div>You don't have any of your own notebooks yet. Create one to get started.</div>
<% end %>

<div id="owned-notebooks" class="grid-display">
  <% @owned_notebooks.each do |notebook| %>
    <%= render notebook %>
  <% end %>
</div>


<div class="flex flex-row items-center justify-between">
  <h1 class="heading-1">Joined Notebooks</h1>
  <div data-controller="join" class='flex flex-row items-center justify-between'>
    <input data-join-target="id" autofocus="autofocus" autocomplete="text" class="text-field inline-block mr-2 w-32" type="text" value="" placeholder="Notebook ID">
    <button data-action="click->join#preview" class='primary-button whitespace-nowrap'>Join a Notebook</button>
  </div>
</div>

<% if @joined_notebooks.empty? %>
  <div>You haven't joined any notebooks yet. Enter a notebook code to join it and get started.</div>
<% end %>

<div id="joined-notebooks" class="grid-display">
  <% @joined_notebooks.each do |notebook| %>
    <%= render notebook %>
  <% end %>
</div>
